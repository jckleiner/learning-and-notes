    agent {
        dockerfile {
            dir './path/to/dockerfile'
            filename 'Dockerfile.node16'
            label 'my-label'
            additionalBuildArgs  '--build-arg version=1.0'
            args '-v /tmp:/tmp'

        }
    }
    stages {
        stage('Test') {
            steps {
                sh 'node --version'
            }
        }
    }
}